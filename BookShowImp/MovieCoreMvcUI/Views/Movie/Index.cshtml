
@model IEnumerable<BookMyShowEntity.Movie>


@{
    ViewData["Title"] = "Index";
}

<div>
    <a asp-controller="Movie" asp-action="MovieEntry">Click here for movie Entry</a>
    <hr/>
</div>

<div class="row">
    <div class="col-12">
        <center><h3 style="color:chartreuse">Movie Entries</h3></center>
        <hr/>
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie Id</th>
                    <th>Movie Name</th>
                    <th>Movie Description</th>
                    <th>Movie Type</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.MovieId</td>
                        <td>@movie.Name</td>
                        <td>@movie.MovieDesc</td>
                        <td>@movie.MovieType</td>
                        <td><a asp-controller="Movie" asp-action="EditMovie" asp-route-MovieId="@movie.MovieId">Edit</a></td>
                        <td><a asp-controller="Movie" asp-action="DeleteMovie" asp-route-MovieId="@movie.MovieId">Delete</a></td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>