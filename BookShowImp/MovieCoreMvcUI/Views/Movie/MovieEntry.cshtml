@model BookMyShowEntity.Movie;

@{
    ViewData["Title"] = "MovieEntry";
}

<div>
    <a asp-controller="Movie" asp-action="Index">Movie Entry</a>
    <center><h1>Welcome to Movie Entry</h1></center>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
  
    <div class="form-group">
        <label>Movie Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter Movie Name" required/>

    </div>
    <div class="form-group">
        <label>Movie Description</label>
        <input type="text" asp-for="MovieDesc" class="form-control" placeholder="Enter Movie Description" required />

    </div>
    <div class="form-group">
        <label>Movie Type</label>
        <input type="text" asp-for="MovieType" class="form-control" placeholder="Enter Movie Type" required />

    </div>
    <input type="submit" value="Save" class="btn btn-outline-success"/> 
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
    

</form>

