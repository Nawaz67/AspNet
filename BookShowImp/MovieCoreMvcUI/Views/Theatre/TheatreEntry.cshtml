@model BookMyShowEntity.Theatre;

@{
    ViewData["Title"] = "TheatreEntry";
}

<div>
    <a asp-controller="Theatre" asp-action="Index">Back to Index</a>
    <center><h1>Welcome to Theatre Entry</h1></center>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>Theatre Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter Theatre Name" required />

    </div>
    <div class="form-group">
        <label>Theatre Address</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="Enter Theatre Address" required />

    </div>
    <div class="form-group">
        <label>Theatre Comments</label>
        <input type="text" asp-for="Comments" class="form-control" placeholder="Enter Comments" required />

    </div>
    <div class="form-group">
        <label>Location Id</label>
        <input type="text" asp-for="LocationId" class="form-control" placeholder="Enter Location ID" required />

    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }


</form>

